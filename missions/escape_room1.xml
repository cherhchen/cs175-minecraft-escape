<Mission xmlns="http://ProjectMalmo.microsoft.com"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <About>
    <Summary>Parkour Escape Room 1</Summary>
  </About>

  <ModSettings>
      <MsPerTick>50</MsPerTick>
  </ModSettings>

  <ServerSection>
    <ServerInitialConditions>
      <Time>
        <StartTime>1000</StartTime>
        <AllowPassageOfTime>false</AllowPassageOfTime>
      </Time>
    </ServerInitialConditions>

    <ServerHandlers>
      <FlatWorldGenerator generatorString="3;2,1;25;"/>
      <DrawingDecorator>
        <!-- Room -->
        <!-- 5 x 4 room (commented out) -->
<!--             <DrawCuboid x1="0" y1="1" z1="0" x2="6" y2="2" z2="5" type="stone"/> -->
<!--             <DrawCuboid x1="1" y1="2" z1="1" x2="5" y2="2" z2="4" type="air"/> -->

        <!-- 4 x 3 room -->
<!--             <DrawCuboid x1="0" y1="1" z1="0" x2="4" y2="2" z2="5" type="stone"/> -->
<!--             <DrawCuboid x1="1" y1="2" z1="1" x2="3" y2="2" z2="4" type="air"/> -->
          
        <!--  Draw Room  -->
        <DrawCuboid x1="0" y1="1" z1="0" x2="6" y2="9" z2="5" type="stone"/>
        <DrawCuboid x1="1" y1="2" z1="1" x2="5" y2="9" z2="4" type="air"/>
        
        <!-- Add water to the floor  -->
        <DrawCuboid x1="1" y1="1" z1="1" x2="5" y2="1" z2="4" type="water"/>
          
        <!--  Add starting platform   -->
        <DrawBlock x="4" y="2" z="3" type="purpur_block"/>
        
        <!--  Draw Parkour Platforms -->
        <DrawBlock x="5" y="2" z="3" type="stone_slab"/>
        <DrawBlock x="5" y="3" z="4" type="stone_slab"/>
        <DrawBlock x="3" y="4" z="4" type="stone_slab"/>
        <DrawBlock x="1" y="5" z="4" type="stone_slab"/>
        <DrawBlock x="1" y="6" z="2" type="stone_slab"/>
        <DrawBlock x="1" y="6" z="1" type="stone_slab"/>
        
        <!--  Goal  -->
        <DrawBlock x="1" y="6" z="0" type="gold_block"/>
          
        
        <!-- Carve space in room for door -->
        <DrawBlock x="1" y="7" z="0" type="air"/>
        <DrawBlock x="1" y="8" z="0" type="air"/>
      
      </DrawingDecorator>
      <ServerQuitWhenAnyAgentFinishes/>
    </ServerHandlers>
  </ServerSection>

  <AgentSection mode="Survival">
    <Name>EscapeAgent</Name>
    <AgentStart>
      <Placement x="4.5" y="3" z="3.5" pitch="0" yaw="0"/>
    </AgentStart>

    <AgentHandlers>           
      <ObservationFromGrid>
        <Grid name="fullRoom">
          <min x="0" y="1" z="0"/>
          <max x=" 6" y="9" z=" 5"/>
        </Grid>
      </ObservationFromGrid>
      <ChatCommands/>
      <VideoProducer want_depth="false">
        <Width>800</Width>
        <Height>600</Height>
      </VideoProducer>
      <ObservationFromFullStats />
      <ContinuousMovementCommands/>
      <InventoryCommands/>
      <MissionQuitCommands/>
      <RewardForTouchingBlockType>
        <Block reward="50" type="stone_slab" behaviour="oncePerBlock"/>
        <Block reward="-25" type="water"/>
      </RewardForTouchingBlockType>      
      <RewardForSendingCommand reward="-1"/>
      <RewardForMissionEnd>
          <Reward description="Goal_found" reward="100"/>
          <Reward description="command_quota_reached" reward="-75"/>
      </RewardForMissionEnd>
      <AgentQuitFromTouchingBlockType>
        <Block type="gold_block" description="Goal_found"/>
        <Block type="water"/>
      </AgentQuitFromTouchingBlockType>
      <AgentQuitFromReachingCommandQuota description="command_quota_reached" total="150"/>
    </AgentHandlers>
  </AgentSection>
</Mission>